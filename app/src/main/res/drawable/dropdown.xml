<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <solid android:color="@android:color/transparent" />

            <stroke
                android:width="1dp"
                android:color="#EBEBEB" />

            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="10dp"
                android:top="2dp" />
        </shape>
    </item>
    <item>
        <bitmap
            android:gravity="end"
            android:src="@drawable/arrow"
            />
    </item>

</layer-list>