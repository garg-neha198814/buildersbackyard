<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="#0000" />

            <stroke
                android:width="1dp"
                android:color="#999999" />

            <padding
                android:bottom="2dp"
                android:left="15dp"
                android:top="2dp" />
        </shape>
    </item>
    <item>
        <bitmap
            android:gravity="end"
            android:src="@drawable/ic_drop" />
    </item>

</layer-list>