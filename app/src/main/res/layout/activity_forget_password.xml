<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/splash"
    tools:context="com.itpro.buildersbackyard.ui.activity.ForgetPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
       android:gravity="center_vertical|center"
        android:weightSum="15">

        <LinearLayout
            android:id="@+id/applogo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="6"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.4"
                android:src="@mipmap/bb_logo" />

            <TextView
                android:id="@+id/splash_label"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="center_vertical|center_horizontal"
                android:text="Builders Backyard"
                android:textColor="#ffffff"
                android:textSize="@dimen/textsize" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/applogo"
            android:layout_weight="2"
            android:textSize="@dimen/password_header_textsize"
            android:gravity="center_horizontal"
            android:text="LEAVE YOUR EMAIL TO YOU HAVE NEW PASSWORD SENT TO YOU"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/user_email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:background="@drawable/bg_input"
            android:gravity="center"
            android:hint="Enter Your Email Here"
            android:padding="10dp"
            android:textSize="@dimen/password_txt_textsize"
            android:singleLine="true" />

        <Button
            android:id="@+id/request_password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1.5"
            android:background="@drawable/bg_green_btn"
            android:text="Request Password"
            android:textColor="#ffffff" />
    </LinearLayout>
    <com.lsjwzh.widget.materialloadingprogressbar.CircleProgressBar
        android:id="@+id/progressBar"
        android:layout_width="50dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"/>
</RelativeLayout>
