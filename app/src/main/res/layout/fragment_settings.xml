<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clickable="true"
    tools:context="com.itpro.buildersbackyard.ui.activity.ForgetPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="0dp"
            android:id="@+id/lin1"
             android:layout_weight="1"
             android:weightSum="1"
             android:orientation="horizontal">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Terms of use "
                 android:textColor="#000000"
                 android:layout_weight=".9"
                 android:padding="10dp"
                 android:textSize="18sp"
                android:layout_gravity="center_vertical"
                 android:id="@+id/textView_terms" />

             <ImageView
                 android:layout_width="22dp"
                 android:layout_height="22dp"
                 android:background="@mipmap/right_arrow2"
                 android:layout_gravity="center_vertical|end"
                 android:id="@+id/imageView_terms" />
         </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/lin2"
            android:layout_weight="1"
            android:background="#F1F1F1"
            android:weightSum="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us "
                android:textColor="#000000"
                android:layout_weight=".9"
                android:padding="10dp"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:id="@+id/textView_contact" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@mipmap/right_arrow2"
                android:layout_gravity="center_vertical|end"
                android:id="@+id/imageView_contact" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/lin3"
            android:layout_weight="1"
            android:weightSum="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change password"
                android:textColor="#000000"
                android:layout_weight=".9"
                android:padding="10dp"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:id="@+id/textView_changepassword" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@mipmap/right_arrow2"
                android:layout_gravity="center_vertical|end"
                android:id="@+id/imageView_changepassword" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/lin4"
            android:background="#F1F1F1"
            android:weightSum="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete account"
                android:textColor="#000000"
                android:layout_weight=".9"
                android:padding="10dp"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:id="@+id/textView_deleteaccount" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@mipmap/right_arrow2"
                android:layout_gravity="center_vertical|end"
                android:id="@+id/imageView_deleteaccount" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
