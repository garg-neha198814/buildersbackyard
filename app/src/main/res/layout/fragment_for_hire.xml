<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc"
android:clickable="true"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:gravity="center_vertical"

        android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
       android:layout_weight="1"

        android:orientation="horizontal"
        android:weightSum="2"
        >
        <TextView
            android:id="@+id/post_job"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#0091E5"
            android:textColor="#ffffff"
           android:gravity="center_vertical|center"
            android:textSize="@dimen/forhire_textsize"
            android:textStyle="bold"
            android:text=" POST\nA JOB"/>
        <TextView
            android:id="@+id/find_job"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#455B64"
            android:textColor="#ffffff"
            android:gravity="center_vertical|center"
            android:textSize="@dimen/forhire_textsize"
            android:textStyle="bold"
            android:text=" FIND\nA JOB"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:id="@+id/get_hired"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="#FF684D"
                android:textColor="#ffffff"
                android:gravity="center_vertical|center"
                android:textSize="@dimen/forhire_textsize"
                android:textStyle="bold"
                android:text="GET\nHIRED"/>
            <TextView
                android:id="@+id/find_candidate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="#635CA5"
                android:textColor="#ffffff"
                android:gravity="center_vertical|center"
                android:textSize="@dimen/forhire_textsize"
                android:textStyle="bold"
                android:text="HIRE\nA TRADE"/>

        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>